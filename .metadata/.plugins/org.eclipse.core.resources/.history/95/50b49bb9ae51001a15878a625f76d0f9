package lv.anna.horoscope;

import java.util.Scanner;

public class horoscopeSigns {

	public static void main(String[] args) {
		int date = 0;
		String month = "Month"; 
		String sign = "Sign";
		Scanner sc = new Scanner(System.in); 
		
		System.out.println("Write your birth date: ");
		date = sc.nextInt();
		System.out.println("Write your birth month: ");
		month = sc.next();
		
		if(month == "January"){
			if (date < 20)
				sign = "Capricorn";
		else 
				sign = "Aquarius";
		}else if (month == "February"){
			if (date < 19)
				sign = "Aquarius";
			else 
				sign = "Pisces";
		  } else if(month == "March") {
		         if (date < 21)
		            sign = "Pisces";
		         else
		            sign = "Aries";
		      } else if (month == "April") {
		         if (date < 20)
		            sign = "Aries";
		         else
		            sign = "Taurus";
		      } else if (month == "May") {
		         if (date < 21)
		            sign = "Taurus";
		         else
		            sign = "Gemini";
		      } else if( month == "June") {
		         if (date < 21)
		            sign = "Gemini";
		         else
		            sign = "Cancer";
		      } else if (month == "July") {
		         if (date < 23)
		            sign = "Cancer";
		         else
		            sign = "Leo";
		      } else if( month == "August") {
		         if (date < 23) 
		            sign = "Leo"; 
		         else
		            sign = "Virgo";
		      } else if (month == "September") {
		         if (date < 23)
		            sign = "Virgo";
		         else
		            sign = "Libra";
		      } else if (month == "October") {
		         if (date < 23)
		            sign = "Libra";
		         else
		            sign = "Scorpio";
		      } else if (month == "November") {
		         if (date < 22)
		            sign = "scorpio";
		         else
		            sign = "Sagittarius";
		      } else if (month == "December") {  
		         if (date < 22)
		            sign = "Sagittarius"; 
		         else
		            sign ="Capricorn";
		      }
		System.out.println("Your horoscope sign is: " +sign);
		}
		
	}

