
public class OperatorsMath {

	
	public static void main(String[] args) {
		double num1 = 5.4d;
		double num2 = 0.3d;
		double result;
		char add = '+';
		char substract = '-';
		char multiple = '*';
		char divide = '/';
		
		result = num1 + num2;
		
		System.out.println(num1 + " "+add+" " +num2+" = "+result);
		System.out.println();
		System.out.println(num1 + " "+substract+" " +num2+" = "+result);
		System.out.println();
		System.out.println(num1 + " "+multiple+" " +num2+" = "+result);
		System.out.println();
		System.out.println(num1 + " "+divide+" " +num2+" = "+result);
		System.out.println();
		

	}

}
